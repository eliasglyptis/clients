<div class="row align-items-center pt-5 pb-5 pb-lg-3 mt-3">
  <!-- Card START -->
  <div class="col-lg-10 col-xs-12 mx-auto">
    <h1>Edit Your Client</h1>
    <p class="mb-4">Let's edit your Client.</p>
     
    <div class="card mb-4">
      <div class="card-body">
        <%= form_for @client, html: {class: 'row g-3'} do |f| %>

          <div class="col-md-6">
            <label class="form-label">Client first name</label>
            <%= f.text_field :first_name, autocomplete: 'first-name', class: 'form-control' %>
          </div>

          <div class="col-md-6">
            <label class="form-label">Client last name</label>
            <%= f.text_field :last_name, autocomplete: 'last-name', class: 'form-control' %>
          </div>
          
          <div class="col-md-8">
            <label class="form-label">Client email</label>
            <%= f.text_field :email, autocomplete: 'email', class: 'form-control' %>
          </div>

          <div class="col-md-4">
            <label class="form-label">Category</label>
            <%= f.select(:category_id, options_for_select(@categories.map{ |c| [c.name, c.id] },
            selected: @client.category_id), {}, {class: 'form-select rounded'}) %>
          </div>

          <div class="col-md-6">
            <label class="form-label">Total Revenue From Client</label>
            <%= f.number_field :revenue, autocomplete: 'revenue', class: 'form-control' %>
          </div>

          <div class="col-md-6 p-2 mr-2 mt-auto">
            <div class="form-check pl-3">
              <%= f.check_box :active, { class: 'form-check-input' } %>
              <label class="form-check-label">
                <%= @client.active ? 'Uncheck to Deactivate' : 'Check to Activate' %>
              </label>
            </div>
          </div>

          <%= f.submit "Update Client", class: 'btn btn-sm btn-primary mb-0' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>
