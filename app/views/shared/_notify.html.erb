<% unless flash.empty? %>

  <script type="text/javascript">
    <% flash.each do |msg_key, msg_value| %>

      <% msg_type = msg_key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      new Noty({
          type: '<%= msg_type %>',
          layout: 'bottomRight',
          timeout: '3000',
          text: '<%= msg_value %>',
          theme: 'sunset'
      }).show();
      
    <% end %>
  </script>
  
<% end %>