<div class="row justify-content-center align-items-center vh-100 py-5">
  <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">

    <div class="card card-body rounded-3 text-center p-4 p-sm-5">
      <h1 class="mb-2">Forgot password?</h1>
      <p>Enter the email address associated with account.</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'mt-3' }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
        </div>

        <div class="mb-3">
          <p>Back to <%= link_to "Log In", new_user_session_path %></p>
        </div>

        <div class="mb-3">
          <p>Need an account? <%= link_to "Create Account", new_user_registration_path %></p>
        </div>

        <div class="d-grid">
          <%= f.submit "Reset password", class: "btn btn-primary" %>
        </div>
        
      <% end %>
      
    </div>
    
  </div>
</div> 
