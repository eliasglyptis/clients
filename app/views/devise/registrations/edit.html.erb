<!-- Main content START -->
<div class="row vh-100 py-5">
  <div class="col-lg-6 vstack gap-4">
    <div class="tab-content py-0 mb-0">
      <div class="mb-4">
        <h2 class="mb-2">Edit your details</h2>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => 'row g-3'}) do |f| %>
            
            <%= render "devise/shared/error_messages", resource: resource %> 

            <div class="col-sm-6">
              <%= f.label :full_name, class: 'form-label' %><%= f.text_field :full_name, class: 'form-control', placeholder: 'Enter your full name' %> 
            </div>

            <div class="col-sm-6">
              <label class="form-label">Your Email</label>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Your email' %> 
            </div>

            <div class="col-sm-12">
              <label class="form-label">Your organization name</label>
              <%= f.text_field :organization, class: 'form-control', placeholder: 'Organization name' %>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-6">
              <label class="form-label">New Password - (leave blank if you don't want to change it)</label>
              <%= f.password_field :password, class: 'form-control', placeholder: 'New password'  %>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-6">
              <label class="form-label">Confirm New Password</label>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password'  %>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-6">
              <label class="form-label">Enter current password to confirm your changes</label>
              <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current password'  %>
            </div>

            <div class="col-12 text-end">
              <%= f.submit 'Update Changes', class: "btn btn-sm btn-primary mb-0 mt-3" %> 
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>