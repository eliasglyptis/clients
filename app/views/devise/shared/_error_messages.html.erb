<% if resource.errors.any? %>
  
  <script>

    <% resource.errors.full_messages.each do |msg| %>
      new Noty({
          type: 'error',
          layout: 'topRight',
          timeout: '3000',
          text: '<%= msg %>',
          theme: 'sunset'
      }).show();
    <% end %>

    
  </script>

<% end %>
